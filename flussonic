#Criando arquivo de instalação
vim flussonic_install.sh

#Permissão para executar scrip
chmod +x flussonic_install.sh

#Atualizando pacotes
apt update && apt upgrade -y

#Escrip instalação
#!/bin/bash
mkdir /usr/local/src/flussonic
cd /usr/local/src/flussonic
curl -sSf https://flussonic.com/public/install.sh | sh
systemctl start flussonic
